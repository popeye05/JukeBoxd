{
  "name": "jukeboxd",
  "version": "1.0.0",
  "description": "Social music discovery web application",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.prod.json",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node scripts/run-integration-tests.js",
    "test:integration:backend": "node scripts/run-integration-tests.js --backend",
    "test:integration:frontend": "node scripts/run-integration-tests.js --frontend",
    "test:integration:property": "node scripts/run-integration-tests.js --property",
    "test:integration:coverage": "node scripts/run-integration-tests.js --coverage",
    "db:migrate": "node dist/scripts/migrate.js",
    "db:seed": "node dist/scripts/seed.js",
    "postinstall": "cd frontend && npm install"
  },
  "keywords": [
    "music",
    "social",
    "discovery",
    "spotify",
    "albums"
  ],
  "author": "JukeBoxd Team",
  "license": "MIT",
  "dependencies": {
    "@tidal-music/api": "^0.7.0",
    "@tidal-music/auth": "^1.4.0",
    "@tidal-music/search": "^0.4.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "tidal-music-api": "^1.2.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
